<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:background="@color/top_layout_background"
    android:layout_height="@dimen/top_layout_height">

    <TextView
        android:id="@+id/textview_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/bottom_layout_text_margin"
        android:layout_marginLeft="@dimen/bottom_layout_text_margin"
        android:layout_centerInParent="true"
        android:textColor="@color/app_name_text_color"
        android:text="@string/app_name"
        android:textSize="@dimen/top_layout_text_size" />

    <ImageView
        android:id="@+id/imageview_right"
        android:layout_width="@dimen/top_layout_img_size"
        android:layout_height="@dimen/top_layout_img_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/help"
        android:layout_marginEnd="@dimen/bottom_layout_text_margin"
        android:layout_marginRight="@dimen/bottom_layout_text_margin"
        android:textSize="@dimen/bottom_layout_text_size" />
</RelativeLayout>